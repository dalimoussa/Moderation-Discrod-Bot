            "name": "edit",
            "description": "Edit case reason",
            "type": "SUB_COMMAND",
            "options": [
              {
                "name": "case_id",
                "description": "Case ID to edit",
                "type": "INTEGER",
                "required": true,
                "min_value": 1
              },
              {
                "name": "reason",
                "description": "New reason",
                "type": "STRING",
                "required": true,
                "min_length": 5,
                "max_length": 500
              }
            ]
          }
        ],
        "default_member_permissions": "MANAGE_MESSAGES",
        "dm_permission": false
      }
