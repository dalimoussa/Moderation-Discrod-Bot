        "type": "CHAT_INPUT",
        "options": [
          {
            "name": "view",
            "description": "View a specific case",
            "type": "SUB_COMMAND",
            "options": [
              {
                "name": "case_id",
                "description": "Case ID to view",
                "type": "INTEGER",
                "required": true,
                "min_value": 1
              }
