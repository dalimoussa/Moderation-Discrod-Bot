{
  "commands": {
    "moderation": {
      "warn": {
        "name": "warn",
        "description": "Issue a warning to a user",
        "type": "CHAT_INPUT",
        "options": [
          {
            "name": "user",
            "description": "User to warn",
            "type": "USER",
            "required": true
          },
          {
            "name": "reason",
            "description": "Reason for the warning",
            "type": "STRING",
            "required": true,
            "min_length": 5,
            "max_length": 500
          },
          {
            "name": "silent",
            "description": "Don't notify the user",
            "type": "BOOLEAN",
            "required": false
          }
        ],
        "default_member_permissions": "MANAGE_MESSAGES",
        "dm_permission": false,
        "response_example": {
          "embeds": [
            {
              "title": "User Warned — Case #142",
              "description": "**Target:** @bad_user (1234567890)\n**Moderator:** @mod (987654321)\n**Reason:** Posting NSFW links in #general\n**Case ID:** 142",
              "color": 15158332,
              "timestamp": "2025-09-15T12:34:56Z",
              "footer": {
                "text": "Aegis Moderation System"
              }
            }
          ],
          "ephemeral": true
        }
      },
      "mute": {
        "name": "mute",
        "description": "Temporarily mute a user",
        "type": "CHAT_INPUT",
        "options": [
          {
            "name": "user",
            "description": "User to mute",
            "type": "USER",
            "required": true
