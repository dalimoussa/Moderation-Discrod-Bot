          },
          {
            "name": "search",
            "description": "Search cases by user",
            "type": "SUB_COMMAND",
            "options": [
              {
                "name": "user",
                "description": "User to search cases for",
                "type": "USER",
                "required": true
              },
              {
                "name": "action",
                "description": "Filter by action type",
                "type": "STRING",
                "required": false,
                "choices": [
                  {"name": "Warn", "value": "warn"},
                  {"name": "Mute", "value": "mute"},
                  {"name": "Ban", "value": "ban"},
                  {"name": "Kick", "value": "kick"}
